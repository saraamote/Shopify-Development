/**********

global

***********/

body {

  font: 100 10px 'Proxima Nova Condensed', sans-serif;
  letter-spacing: 1px;
  background: #efefef;
  text-align: center;
  height: 100%;
  color: #333;
  margin: 0;

}

.main-content,
.wrapper,
ul,
ol {

  padding: 0;
  margin: 0;

}

/*
header
*/

.bespoke-top-navigation {

  background: rgba( 0 , 0 , 0 , 0.7 );
  position: fixed;
  margin: auto;
  z-index: 100;
  padding: 0;
  right: 0;
  left: 0;

}

.bespoke-top-navigation .cart,
.bespoke-top-navigation ul li,
.bespoke-top-navigation ul,
.bespoke-top-navigation h1 {

  display: inline-block;

}

.bespoke-top-navigation ul li a,
.bespoke-top-navigation .cart a {

  color: #fff;

}

/* about link */

.bespoke-top-navigation ul:first-child li:first-child {

  position: absolute;
  left: 15px;
  top: 10px;

}

/* cart link */

.bespoke-top-navigation .cart {

  position: absolute;
  right: 15px;
  top: 10px;

}

/**********

collection page

***********/

.product {

  position: relative;
  overflow: hidden;
  background: #000;
  width: 100vw;

}

/*
product form
*/

.product-form {

  border-bottom: 1px solid #000;
  border-top: 1px solid #000;
  margin: 3% 6%;
  font-size: 0;
  padding: 0;

}

/*
inquire, price, purchse
*/

.product-drawer-purchase,
.product-drawer-inquire,
.product-drawer-price {

  font: 100 15px/1.5em "Proxima Nova Condensed", "Avenir Next Condensed", sans-serif;
  text-transform: uppercase;
  display: inline-block;
  text-align: center;
  padding: 2% 0;
  width: 33.33%;

}

/*
product description
*/

.product input[type="checkbox"] {

  display: none;

}

.product-drawer {

  font: 300 15px/22px 'Proxima Nova Condensed', 'Avenir Next Condensed', sans-serif;
  font-variant: normal;
  background: #efefef;
  font-style: normal;
  text-align: center;
  display: none;

}

.product-drawer h2 {

  font: 100 23px/1.5 'AW Conqueror Didot', 'Didot', serif;
  text-transform: uppercase;
  padding-bottom: .5em;
  padding-top: 3em;
  margin: 0 6%;

}

.product-drawer p {

  margin: 3% 6%;

}

/* designer bio */

.designer-bio {

  font: 300 15px/22px 'Proxima Nova Condensed', 'Avenir Next Condensed', sans-serif;
  font-variant: normal;
  font-style: normal;
  text-align: center;
  margin: 3% 6%;

}

/* product grid */

.collection-grid {

  position: relative;
  background: #000;
  font-size: 0;

}

.collection-grid img {

  width: 33.33%;

}



