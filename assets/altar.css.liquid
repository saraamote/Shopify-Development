/*
product images
*/

.product .product-radio:nth-of-type( 2 ):checked ~ .product-images {

  transform: translateX( -100vw );

}

.product .product-radio:nth-of-type( 3 ):checked ~ .product-images {

  transform: translateX( -200vw );

}

.product .product-radio:nth-of-type( 4 ):checked ~ .product-images {

  transform: translateX( -300vw );

}

.product .product-radio:nth-of-type( 5 ):checked ~ .product-images {

  transform: translateX( -400vw );

}

.product .product-radio:nth-of-type( 6 ):checked ~ .product-images {

  transform: translateX( -500vw );

}

.product .product-radio:nth-of-type( 7 ):checked ~ .product-images {

  transform: translateX( -600vw );

}

.product .product-radio:nth-of-type( 8 ):checked ~ .product-images {

  transform: translateX( -700vw );

}

.product .product-radio:nth-of-type( 9 ):checked ~ .product-images {

  transform: translateX( -800vw );

}

.product-images {

  white-space: nowrap;
  display: block;

}

.product-images img {

  width: 100vw;

}

/* image dot navigation */

.product input[type="radio"] {

  display: none;

}

.product-images-navigation {

  position: relative;

}

.product-images-navigation label {

  font-size: 12px;
  display: none;
  padding: 0 20px;

}

.product .product-radio:nth-of-type( 1 ):checked ~ .product-images-navigation label:nth-of-type( 2 ) {

  display: block;

}

.product .product-radio:nth-of-type( 2 ):checked ~ .product-images-navigation label:nth-of-type( 1 ),
.product .product-radio:nth-of-type( 2 ):checked ~ .product-images-navigation label:nth-of-type( 3 ) {

  display: block;

}

.product .product-radio:nth-of-type( 3 ):checked ~ .product-images-navigation label:nth-of-type( 2 ),
.product .product-radio:nth-of-type( 3 ):checked ~ .product-images-navigation label:nth-of-type( 4 ) {

  display: block;

}

.product .product-radio:nth-of-type( 4 ):checked ~ .product-images-navigation label:nth-of-type( 3 ),
.product .product-radio:nth-of-type( 4 ):checked ~ .product-images-navigation label:nth-of-type( 5 ) {

  display: block;

}

.product .product-radio:nth-of-type( 5 ):checked ~ .product-images-navigation label:nth-of-type( 4 ),
.product .product-radio:nth-of-type( 5 ):checked ~ .product-images-navigation label:nth-of-type( 6 ) {

  display: block;

}

.product .product-radio:nth-of-type( 6 ):checked ~ .product-images-navigation label:nth-of-type( 5 ),
.product .product-radio:nth-of-type( 6 ):checked ~ .product-images-navigation label:nth-of-type( 7 ) {

  display: block;

}

.product .product-radio:nth-of-type( 7 ):checked ~ .product-images-navigation label:nth-of-type( 6 ),
.product .product-radio:nth-of-type( 7 ):checked ~ .product-images-navigation label:nth-of-type( 8 ) {

  display: block;

}

.product .product-radio:nth-of-type( 8 ):checked ~ .product-images-navigation label:nth-of-type( 7 ),
.product .product-radio:nth-of-type( 8 ):checked ~ .product-images-navigation label:nth-of-type( 9 ) {

  display: block;

}

/* style - both */

.product-images-navigation label {

  background: rgba( 0 , 0 , 0 , 0.5 );
  position: absolute;
  height: 100vw;
  font-size: 0;
  width: 64px;
  padding: 0;
  bottom: 0;
  top: 0;

}

/* style - previous */

.product .product-radio:nth-of-type( 2 ):checked ~ .product-images-navigation label:nth-of-type( 1 ),
.product .product-radio:nth-of-type( 3 ):checked ~ .product-images-navigation label:nth-of-type( 2 ),
.product .product-radio:nth-of-type( 4 ):checked ~ .product-images-navigation label:nth-of-type( 3 ),
.product .product-radio:nth-of-type( 5 ):checked ~ .product-images-navigation label:nth-of-type( 4 ),
.product .product-radio:nth-of-type( 6 ):checked ~ .product-images-navigation label:nth-of-type( 5 ),
.product .product-radio:nth-of-type( 7 ):checked ~ .product-images-navigation label:nth-of-type( 6 ),
.product .product-radio:nth-of-type( 8 ):checked ~ .product-images-navigation label:nth-of-type( 7 ) {

  box-shadow: inset -2px -1px 2px rgba( 0 , 0 , 0 , 0.33 );
  left: 0;

}

/* style - next */

.product .product-radio:nth-of-type( 1 ):checked ~ .product-images-navigation label:nth-of-type( 2 ),
.product .product-radio:nth-of-type( 2 ):checked ~ .product-images-navigation label:nth-of-type( 3 ),
.product .product-radio:nth-of-type( 3 ):checked ~ .product-images-navigation label:nth-of-type( 4 ),
.product .product-radio:nth-of-type( 4 ):checked ~ .product-images-navigation label:nth-of-type( 5 ),
.product .product-radio:nth-of-type( 5 ):checked ~ .product-images-navigation label:nth-of-type( 6 ),
.product .product-radio:nth-of-type( 6 ):checked ~ .product-images-navigation label:nth-of-type( 7 ),
.product .product-radio:nth-of-type( 7 ):checked ~ .product-images-navigation label:nth-of-type( 8 ),
.product .product-radio:nth-of-type( 8 ):checked ~ .product-images-navigation label:nth-of-type( 9 ) {

  box-shadow: inset 2px -1px 2px rgba( 0 , 0 , 0 , 0.33 );
  right: 0;


}

/*
image location
*/

.product-images-location:before {

  background: rgba( 255 , 255 , 255 , 0.1875 );
  display: inline-block;
  border-radius: 100%;
  position: absolute;
  height: 16px;
  width: 16px;
  content: '';
  margin: 6px;
  z-index: 0;

}

.product .product-radio:nth-of-type( 1 ):checked ~ .product-images-location:before {

  transform: translateX( 0 );

}

.product .product-radio:nth-of-type( 2 ):checked ~ .product-images-location:before {

  transform: translateX( 28px );

}

.product .product-radio:nth-of-type( 3 ):checked ~ .product-images-location:before {

  transform: translateX( 56px );

}

.product .product-radio:nth-of-type( 4 ):checked ~ .product-images-location:before {

  transform: translateX( 84px );

}

.product .product-radio:nth-of-type( 5 ):checked ~ .product-images-location:before {

  transform: translateX( 112px );

}

.product .product-radio:nth-of-type( 6 ):checked ~ .product-images-location:before {

  transform: translateX( 140px );

}

.product .product-radio:nth-of-type( 7 ):checked ~ .product-images-location:before {

  transform: translateX( 168px );

}

.product .product-radio:nth-of-type( 8 ):checked ~ .product-images-location:before {

  transform: translateX( 196px );

}

.product .product-radio:nth-of-type( 9 ):checked ~ .product-images-location:before {

  transform: translateX( 224px );

}

.product-images-location {

  display: block;
  margin: auto;
  right: 0;
  left: 0;

}

.product-images-location label {

  background: rgba( 255 , 255 , 255 , 0.25 );
  display: inline-block;
  border-radius: 100%;
  position: relative;
  margin: 10px;
  height: 8px;
  width: 8px;
  z-index: 0;

}

.product-checkbox {

  display: none;

}

.product-checkbox:checked + .product-drawer {

  display: block;

}


