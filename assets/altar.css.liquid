/*
product images
*/

.product .product-radio:nth-of-type( 2 ):checked ~ .product-images {

  transform: translateX( -100vmin );

}

.product .product-radio:nth-of-type( 3 ):checked ~ .product-images {

  transform: translateX( -200vmin );

}

.product .product-radio:nth-of-type( 4 ):checked ~ .product-images {

  transform: translateX( -300vmin );

}

.product .product-radio:nth-of-type( 5 ):checked ~ .product-images {

  transform: translateX( -400vmin );

}

.product .product-radio:nth-of-type( 6 ):checked ~ .product-images {

  transform: translateX( -500vmin );

}

.product .product-radio:nth-of-type( 7 ):checked ~ .product-images {

  transform: translateX( -600vmin );

}

.product .product-radio:nth-of-type( 8 ):checked ~ .product-images {

  transform: translateX( -700vmin );

}

