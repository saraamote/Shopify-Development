/**********

global

***********/

body {

  font: 100 0 'p22-underground', sans-serif;
  letter-spacing: 1px;
  background: #000;
  text-align: center;
  height: 100%;
  color: #fff;
  margin: 0;

}

.main-content,
.wrapper,
ul,
ol,
h1,
h2,
h3 {

  padding: 0;
  margin: 0;

}

main {

  padding: 60px 0 0 0;

}

a {

  text-decoration: none;

}



/**********

header

***********/

.bespoke-top-navigation {

  background: rgba( 0 , 0 , 0 , 0.7 );
  position: fixed;
  margin: auto;
  z-index: 100;
  padding: 0;
  height: 0;
  right: 0;
  left: 0;

}

.bespoke-top-navigation .cart,
.bespoke-top-navigation ul li,
.bespoke-top-navigation ul,
.bespoke-top-navigation h1 {

  display: inline-block;

}

.bespoke-top-navigation ul li a {

  font-family: 'p22-underground',sans-serif;
  text-transform: uppercase;
  vertical-align: text-bottom;
  text-decoration: none;
  font-style: normal;
  line-height: 50px;
  font-weight: 400;
  font-size: 12px;
  padding: 0 20px;
  color: #fff;

}

/* about and cart links */

.bespoke-top-navigation ul:first-child li:first-child a,
.bespoke-top-navigation .cart a {

  font: 300 14px/1.5 'garamond-premier-pro-display', serif;
  text-decoration: none;
  text-transform: none;
  font-style: italic;
  color: #fff;

}

.bespoke-top-navigation ul:first-child li:first-child,
.bespoke-top-navigation .cart {

  position: absolute;
  padding: 0;
  top: 15px;

}

.bespoke-top-navigation ul:first-child li:first-child {

  left: 20px;

}

.bespoke-top-navigation .cart {

  right: 20px;

}


/**********

footer

***********/

footer {

  background: #fff;
  padding: 2.5%;
  font-size: 0;

}

footer .newsletter,
footer .about,
footer .links {

  text-align: center;
  display: block;
  font-size: 0;
  color: #000;

}

footer .about {

  font: 300 22px/1.5 'garamond-premier-pro-display', serif;
  font-style: normal;
  padding: 20px;

}

footer .links a {

  font-family: "p22-underground",sans-serif;
  text-transform: uppercase;
  text-decoration: none;
  font-style: normal;
  font-weight: 400;
  font-size: 12px;
  padding: 20px;
  color: #000;

}


/**********

index

**********/

.featured {

  background: #efefef;

  display: -webkit-box;
  display: -ms-flexbox;
  display: -moz-box;
  display: -webkit-flex;
  display: flex;

  -webkit-justify-content: center;
  -webkit-align-content: center;
  -webkit-align-items: center;

  justify-content: center;
  align-content: center;
  align-items: center;
  min-height: 80vh;

}

.featured img {

  height: 80vw;
  max-height: 75vh;

}

/**********

collection page

***********/

/* group */

.bespoke-cl {

  display: inline-block;
  position: relative;
  width: 50%;

}

.bespoke-cl h2 {

  font: 100 22px/3 'garamond-premier-pro-display', serif;
  background: #efefef;
  font-style: italic;
  color: #000;

}

.bespoke-cl img {

  width: 100%;

}

/* individual */

.product {

  position: relative;
  overflow: hidden;
  background: #000;
  width: 100vw;

}



/*
product form
*/

.product-form {

  border-bottom: 1px solid #000;
  border-top: 1px solid #000;
  margin: 3% 6%;
  font-size: 0;
  padding: 0;

}

/*
inquire, price, purch
*/

.product-drawer-purchase select {

  display: none;

}

.product-drawer-inquire a {

  color: #000;

}

.product-drawer-purchase button {

  font: 500 15px/3 'p22-underground', sans-serif;
  text-transform: uppercase;
  background: #000;
  border: none;
  color: #fff;
  width: 100%;

}

.product-drawer-purchase,
.product-drawer-inquire,
.product-drawer-price {

  font: 500 15px/3 'p22-underground', sans-serif;
  text-transform: uppercase;
  display: inline-block;
  text-align: center;
  padding: 0 2%;
  width: 100%;
  color: #000;

}

/*
product description
*/

.product input[type="checkbox"] {

  display: none;

}

.product-drawer {

  font: 100 15px/22px 'p22-underground', sans-serif;
  font-variant: normal;
  background: #efefef;
  font-style: normal;
  text-align: center;
  display: none;

}


.product-drawer h2 {

  font: 500 23px/1.5 'garamond-premier-pro-display', serif;
  padding-bottom: .5em;
  padding-top: 1.5em;
  margin: 0 6%;
  color: #000;

}

.product-drawer p {

  font: 300 18px/1.5 'garamond-premier-pro-display', serif;
  padding: 30px 15px;
  font-style: normal;
  color: #000;

}

/* designer bio */

.designer-bio {

  font: 300 18px/1.5 'garamond-premier-pro-display', serif;
  -moz-box-sizing: border-box;
  box-sizing: border-box;
  font-variant: normal;
  padding: 3% 6% 9% 3%;
  font-style: italic;
  text-align: center;
  background: #000;
  color: #fff;

}

.designer-bio h2 {

  font: 400 18px 'p22-underground',sans-serif;
  text-transform: uppercase;
  margin: 2.5% 2.5% 5% 2.5%;

}

/* product grid */

.collection-grid {

  position: relative;
  background: #000;
  font-size: 0;

}

.collection-grid img {

  width: 33.33%;

}


/**********

collection page styles

***********/


/*
product images
*/

.product .product-radio:nth-of-type( 2 ):checked ~ .product-images {

  transform: translateX( -100vw );

}

.product .product-radio:nth-of-type( 3 ):checked ~ .product-images {

  transform: translateX( -200vw );

}

.product .product-radio:nth-of-type( 4 ):checked ~ .product-images {

  transform: translateX( -300vw );

}

.product .product-radio:nth-of-type( 5 ):checked ~ .product-images {

  transform: translateX( -400vw );

}

.product .product-radio:nth-of-type( 6 ):checked ~ .product-images {

  transform: translateX( -500vw );

}

.product .product-radio:nth-of-type( 7 ):checked ~ .product-images {

  transform: translateX( -600vw );

}

.product .product-radio:nth-of-type( 8 ):checked ~ .product-images {

  transform: translateX( -700vw );

}

.product .product-radio:nth-of-type( 9 ):checked ~ .product-images {

  transform: translateX( -800vw );

}

.product-images {

  white-space: nowrap;
  display: block;

}

.product-images img {

  width: 100vw;

}

/* image dot navigation */

.product input[type="radio"] {

  display: none;

}

.product-images-navigation {

  position: relative;

}

.product-images-navigation label {

  font-size: 12px;
  display: none;
  padding: 0 20px;

}

.product .product-radio:nth-of-type( 1 ):checked ~ .product-images-navigation label:nth-of-type( 2 ) {

  display: block;

}

.product .product-radio:nth-of-type( 2 ):checked ~ .product-images-navigation label:nth-of-type( 1 ),
.product .product-radio:nth-of-type( 2 ):checked ~ .product-images-navigation label:nth-of-type( 3 ) {

  display: block;

}

.product .product-radio:nth-of-type( 3 ):checked ~ .product-images-navigation label:nth-of-type( 2 ),
.product .product-radio:nth-of-type( 3 ):checked ~ .product-images-navigation label:nth-of-type( 4 ) {

  display: block;

}

.product .product-radio:nth-of-type( 4 ):checked ~ .product-images-navigation label:nth-of-type( 3 ),
.product .product-radio:nth-of-type( 4 ):checked ~ .product-images-navigation label:nth-of-type( 5 ) {

  display: block;

}

.product .product-radio:nth-of-type( 5 ):checked ~ .product-images-navigation label:nth-of-type( 4 ),
.product .product-radio:nth-of-type( 5 ):checked ~ .product-images-navigation label:nth-of-type( 6 ) {

  display: block;

}

.product .product-radio:nth-of-type( 6 ):checked ~ .product-images-navigation label:nth-of-type( 5 ),
.product .product-radio:nth-of-type( 6 ):checked ~ .product-images-navigation label:nth-of-type( 7 ) {

  display: block;

}

.product .product-radio:nth-of-type( 7 ):checked ~ .product-images-navigation label:nth-of-type( 6 ),
.product .product-radio:nth-of-type( 7 ):checked ~ .product-images-navigation label:nth-of-type( 8 ) {

  display: block;

}

.product .product-radio:nth-of-type( 8 ):checked ~ .product-images-navigation label:nth-of-type( 7 ),
.product .product-radio:nth-of-type( 8 ):checked ~ .product-images-navigation label:nth-of-type( 9 ) {

  display: block;

}

/* style - both */

.product-images-navigation label {

  background: rgba( 0 , 0 , 0 , 0.5 );
  position: absolute;
  height: 100vw;
  font-size: 0;
  width: 64px;
  padding: 0;
  bottom: 0;
  top: 0;

}

/* style - previous */

.product .product-radio:nth-of-type( 2 ):checked ~ .product-images-navigation label:nth-of-type( 1 ),
.product .product-radio:nth-of-type( 3 ):checked ~ .product-images-navigation label:nth-of-type( 2 ),
.product .product-radio:nth-of-type( 4 ):checked ~ .product-images-navigation label:nth-of-type( 3 ),
.product .product-radio:nth-of-type( 5 ):checked ~ .product-images-navigation label:nth-of-type( 4 ),
.product .product-radio:nth-of-type( 6 ):checked ~ .product-images-navigation label:nth-of-type( 5 ),
.product .product-radio:nth-of-type( 7 ):checked ~ .product-images-navigation label:nth-of-type( 6 ),
.product .product-radio:nth-of-type( 8 ):checked ~ .product-images-navigation label:nth-of-type( 7 ) {

  box-shadow: inset -2px -1px 2px rgba( 0 , 0 , 0 , 0.33 );
  left: 0;

}

/* style - next */

.product .product-radio:nth-of-type( 1 ):checked ~ .product-images-navigation label:nth-of-type( 2 ),
.product .product-radio:nth-of-type( 2 ):checked ~ .product-images-navigation label:nth-of-type( 3 ),
.product .product-radio:nth-of-type( 3 ):checked ~ .product-images-navigation label:nth-of-type( 4 ),
.product .product-radio:nth-of-type( 4 ):checked ~ .product-images-navigation label:nth-of-type( 5 ),
.product .product-radio:nth-of-type( 5 ):checked ~ .product-images-navigation label:nth-of-type( 6 ),
.product .product-radio:nth-of-type( 6 ):checked ~ .product-images-navigation label:nth-of-type( 7 ),
.product .product-radio:nth-of-type( 7 ):checked ~ .product-images-navigation label:nth-of-type( 8 ),
.product .product-radio:nth-of-type( 8 ):checked ~ .product-images-navigation label:nth-of-type( 9 ) {

  box-shadow: inset 2px -1px 2px rgba( 0 , 0 , 0 , 0.33 );
  right: 0;


}

/*
image location
*/

.product-images-location:before {

  background: rgba( 255 , 255 , 255 , 0.1875 );
  display: inline-block;
  border-radius: 100%;
  position: absolute;
  height: 16px;
  width: 16px;
  content: '';
  margin: 6px;
  z-index: 0;

}

.product .product-radio:nth-of-type( 1 ):checked ~ .product-images-location:before {

  transform: translateX( 0 );

}

.product .product-radio:nth-of-type( 2 ):checked ~ .product-images-location:before {

  transform: translateX( 28px );

}

.product .product-radio:nth-of-type( 3 ):checked ~ .product-images-location:before {

  transform: translateX( 56px );

}

.product .product-radio:nth-of-type( 4 ):checked ~ .product-images-location:before {

  transform: translateX( 84px );

}

.product .product-radio:nth-of-type( 5 ):checked ~ .product-images-location:before {

  transform: translateX( 112px );

}

.product .product-radio:nth-of-type( 6 ):checked ~ .product-images-location:before {

  transform: translateX( 140px );

}

.product .product-radio:nth-of-type( 7 ):checked ~ .product-images-location:before {

  transform: translateX( 168px );

}

.product .product-radio:nth-of-type( 8 ):checked ~ .product-images-location:before {

  transform: translateX( 196px );

}

.product .product-radio:nth-of-type( 9 ):checked ~ .product-images-location:before {

  transform: translateX( 224px );

}

.product-images-location {

  display: block;
  margin: auto;
  right: 0;
  left: 0;

}

.product-images-location label {

  background: rgba( 255 , 255 , 255 , 0.25 );
  display: inline-block;
  border-radius: 100%;
  position: relative;
  margin: 10px;
  height: 8px;
  width: 8px;
  z-index: 0;

}

.product-checkbox {

  display: none;

}

.product-checkbox:checked + .product-drawer {

  display: block;

}


/**********

pages

**********/

.rte {

  font: 300 22px/1.5 'garamond-premier-pro-display', serif;
  padding: 60px 2.5% 5% 2.5%;
  color: #efefef;

}

.rte a {

  text-decoration: none;
  color: #efefef;

}



/**********

cart

**********/

.cart__image img {

  -moz-border-radius: 100%;
  border-radius: 100%;

}


/**********

media queries

**********/



/* collection page - images half screen */

@media (min-width: 600px) {

  .product-images img {

    width: 50vw;

  }

}

/* collection page - grid 6 wide */

@media (min-width: 1080px) {

  .collection-grid img {

    width: 16.66%;

  }

}

/* slide out product drawer */

  @media (min-width: 600px) {

  .product-drawer-purchase,
  .product-drawer-inquire,
  .product-drawer-price {

    width: 33.33%;

  }

}
